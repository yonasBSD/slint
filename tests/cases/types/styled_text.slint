//ignore: pyi

export component TestCase inherits Window {
    VerticalLayout {
        s1 := StyledText {
            text: @markdown("Hello {}", "World");
        }
        s2 := StyledText {
            text: @markdown("Hello {}", "*World*");
        }
        s3 := StyledText {
            text: @markdown("Hello *{}*", "World");
        }
        s4 := StyledText {
            text: @markdown("Hello {}", @markdown("*{}*", "World"));
        }
        s5 := StyledText {
            text: @markdown("*{}* {}", @markdown("**H{}**", "ello"), @markdown("*{}*", "World"));
        }
    }

    out property<styled-text> t1: s1.text;
    out property<styled-text> t2: s2.text;
    out property<styled-text> t3: s3.text;

    out property<length> w1: s1.preferred-width;
    out property<length> w2: s2.preferred-width;
    out property<length> w3: s3.preferred-width;
    out property<length> w4: s4.preferred-width;
    out property<length> w5: s5.preferred-width;

    property<bool> test: w1 == 66px && w2 == 80px && w3 == 64px && w4 == 64px && w5 == 62px;
}

